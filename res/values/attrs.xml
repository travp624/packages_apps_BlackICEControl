<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ListPreferenceMultiSelect">
    	<attr format="string" name="checkAll" />
    	<attr format="string" name="separator" />
    </declare-styleable>
    
    <declare-styleable name="DeveloperPreference">
        <attr name="twitterHandle" format="string" />
        <attr name="donateLink" format="string" />
    </declare-styleable>
    
    <declare-styleable name="PagerHeader">
        <attr name="activeTextColor" format="color" />
        <attr name="inactiveTextColor" format="color" />
        <attr name="tabColor" format="color" />
        <attr name="tabHeight" format="dimension" />
        <attr name="tabPadding" format="dimension" />
        <attr name="paddingPush" format="dimension" />
        <attr name="fadingEdgeLength" format="dimension" />
        <attr name="fadingEdgeColorHint" format="color" />
        <attr name="backgroundColor" format="color" />
        <attr name="showTopShadow" format="boolean" />
        <attr name="showBottomBar" format="boolean" />
        <attr name="showTab" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SlidingPanel">
        <attr name="button" format="reference" />
        <attr name="anchor" format="reference" />
        <attr name="content" format="reference" />
        <attr name="openOverlap" format="dimension" />
        <attr name="closedLimit" format="dimension" />
    </declare-styleable>
    
    <declare-styleable name="Tabs">
        <attr name="bottomBarColor" format="color" />
        <attr name="bottomBarHeight" format="dimension" />
        <attr name="tabIndicatorHeight" format="dimension" />
    </declare-styleable>
    
</resources>
